<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottom_sheet_line">
        <item name="android:layout_marginTop">@dimen/margin_top_bottom_sheet_line</item>
        <item name="android:background">@color/bottom_sheet_line</item>
        <item name="android:layout_width">@dimen/layout_width_bottom_sheet_line</item>
        <item name="android:layout_height">@dimen/layout_height_bottom_sheet_line</item>
    </style>

    <style name="bottom_sheet_description_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_BtS_header</item>
        <item name="android:layout_marginTop">@dimen/margin_top_BtS_header</item>
        <item name="android:paddingStart">@dimen/padding_s_BtS_header</item>
        <item name="android:paddingEnd">@dimen/padding_e_BtS_header</item>
        <item name="android:textColor">@color/textColor_BtS_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bottom_sheet_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_BtS_description</item>
        <item name="android:paddingStart">@dimen/padding_s_BtS_description</item>
        <item name="android:paddingEnd">@dimen/padding_e_BtS_description</item>
        <item name="android:textColor">@color/textColor_BtS_description</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>

    <style name="radiobutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_radioButton</item>
    </style>

    <style name="radio_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_s_radio_group</item>
        <item name="android:layout_marginTop">@dimen/margin_t_radio_group</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="bottom_navigation_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?colorPrimary</item>
        <item name="itemRippleColor">?colorPrimaryVariant</item>
        <item name="itemIconTint">@drawable/color_nav_button_selected</item>
        <item name="itemTextColor">@drawable/color_nav_button_selected</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <style name="tab_slider_pod">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="tabIndicatorColor">?colorOnPrimary</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_slider</item>
        <item name="tabTextAppearance">@style/tab_layout_pod</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>


    <style name="tab_layout_pod" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
