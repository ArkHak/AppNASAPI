<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppNASAPI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_day</item>
        <item name="colorPrimaryVariant">@color/primary_variant_day</item>
        <item name="colorOnPrimary">@color/on_primary_day</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_day</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_day</item>
        <item name="colorOnSecondary">@color/on_secondary_day</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColorActivity">@color/background_day</item>

        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.LargeComponent</item>
    </style>


    <style name="RedTheme" parent="Theme.AppNASAPI">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_variant_red</item>
        <item name="colorOnPrimary">@color/on_primary_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_red</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_red</item>
        <item name="colorOnSecondary">@color/on_secondary_red</item>

        <item name="backgroundColorActivity">@color/background_red</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppNASAPI">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_variant_green</item>
        <item name="colorOnPrimary">@color/on_primary_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_green</item>
        <item name="colorOnSecondary">@color/on_secondary_green</item>

        <item name="backgroundColorActivity">@color/background_green</item>
    </style>


    <style name="AppShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>