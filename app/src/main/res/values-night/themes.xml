<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppNASAPI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_day</item>
        <item name="colorPrimaryVariant">@color/primary_variant_day</item>
        <item name="colorOnPrimary">@color/on_primary_day</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_day</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_day</item>
        <item name="colorOnSecondary">@color/on_secondary_day</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColorActivity">@color/background_day</item>
        <item name="backgroundColorPODCard">@color/backgroundPODCard_day</item>

        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.LargeComponent</item>
    </style>
</resources>